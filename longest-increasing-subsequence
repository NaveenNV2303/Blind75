https://leetcode.com/problems/longest-increasing-subsequence/

class Solution {
    public int lengthOfLIS(int[] nums) {
        List<Integer> arrList = new ArrayList<>();
        for(int i=0; i<nums.length; i++){
            int left = 0;
            int right = arrList.size();
            while(left < right){
                int mid = left + (right - left) / 2;
                if(arrList.get(mid) < nums[i]){
                    left = mid + 1;
                }else{
                    right = mid;
                }
            }
            if(left < arrList.size()){
                arrList.set(left, nums[i]);
            }else{
                arrList.add(nums[i]);
            }
        }
        return arrList.size();
    }
}
