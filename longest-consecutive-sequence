https://leetcode.com/problems/longest-consecutive-sequence/

class Solution {
    public int longestConsecutive(int[] nums) {
        Set<Integer> set = new HashSet<>();
        int count = 0;
        for(int num: nums){
            set.add(num);
        }
        for(int num: set){
            if(!set.contains(num - 1)){
                count = Math.max(count, searchInSet(num, set, 0));
            }
            if(count >= set.size()/2){
                    break;
            }
        }
        return count;
    }
    private int searchInSet(int num, Set<Integer> set, int count){
        if(!set.contains(num)){
            return count;
        }
        count++;
        return searchInSet(num + 1, set, count);
    }
}
