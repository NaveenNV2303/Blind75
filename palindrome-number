https://leetcode.com/problems/palindrome-number/

class Solution {
    public boolean isPalindrome(int x) {
        if(x < 0) return false;
        
        int originalValue = x;
        int revertedValue = 0;
        while(x != 0){
            revertedValue *= 10;
            revertedValue += x%10;
            x = x/10;
        }

        return originalValue == revertedValue;
    }
}
